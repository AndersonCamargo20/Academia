<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<h1>Lista de Funcionários</h1>
  <div class="table-responsive">
    <table class="table ">
      <thead class="text-center text-white">
        <tr>
          <th>Nome</th>
          <th>Cargo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @funcionarios.each do |funcionario| %>
      
       <tbody class="text-center">
      <tr>
        <td><%= funcionario.pessoa.nome %></td>
        <td><%= funcionario.cargo.descricaoCargo %></td>
        <td>
          <%= link_to 'Visualizar', funcionario, :class => "btn btn-primary text-white" %>
          <%= link_to 'Editar', edit_funcionario_path(funcionario), :class => "btn btn-info text-white" %>
          <%= link_to 'Excluir', funcionario, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white" %>
        </td>
        <td>
      </tr>
    
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Cadastrar Funcionário', new_funcionario_path, :class => "btn btn-success text-white" %>
