   <h1><%=  @fornecedor.nome%></h1>
    <div class="table-responsive animated zoomIn">
      <table class="table ">
        <thead class="text-center text-white">
          <tr>
            <th>Cidade</th>
            <th>Bairro</th>
            <th>Rua</th>
            <th>Situação</th>
            <th>Tipo</th>
            <th colspan="3"></th>
          </tr>
        </thead>        
        <tbody class="text-center">
          <tr>
            <td><%= @fornecedor.cidade %></td>
            <td><%= @fornecedor.bairro %></td>
            <td><%= @fornecedor.rua %></td>
            <td>
              <% if @fornecedor.ativo? %>
                Fornecedor ativo
              <% else %>
                Fornecedor desativado
              <% end %>
            </td>
            <td><%= @fornecedor.tipo %></td>
          </tr>
        </tbody>
      </table>
    </div>

