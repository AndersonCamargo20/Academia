<%= form_with(model: treino, local: true) do |form| %>
  <% if treino.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(treino.errors.count, "error") %> prohibited this treino from being saved:</h2>

      <ul>
      <% treino.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container animated slideInLeft">
  <div class="formulario">
  <div class="field">
    <%= form.label "Nome do Aluno" %>
    <br><%= form.select :aluno_id, Aluno.all.collect {|x| [x.pessoa.nome, x.id] if x.ativo?}.compact, :prompt => "Selecione uma das opções"%>
  </div>

  <div class="field">
    <%= form.label "Nome do professor" %>
    <br><%= form.select :funcionario_id, Funcionario.all.collect {|x| [x.pessoa.nome, x.id] if x.cargo.descricaoCargo == "Professor"}.compact, :prompt => "Selecione uma das opções" %>
  </div>

  <div class="field">
    <%= form.label "Tipo de Exercicio" %>
    <br><%= form.select :tipo_exercicio_id, TipoExercicio.all.collect {|x| [x.descricaoExercicio, x.id]}, :prompt => "Selecione uma das opções" %>
  </div>

  <div class="field">
    <%= form.label "Data do Treino" %>
    <br><%= form.date_select :dataTreino, id: :treino_dataTreino %>
  </div>
</div>  
</div>
  <div class="actions">
    <%= link_to ' << Voltar', treinos_path, :class => "btn btn-danger text-white" %>
    <button type="submit" class="btn btn-success">Salvar Treino</button>
  </div>
<% end %>
