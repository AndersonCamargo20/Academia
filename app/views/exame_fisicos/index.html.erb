<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>


<h1>Exame Físico</h1>

    <div class="table-responsive">
      <table class="table ">
        <thead class="text-center text-white">
          <tr>
          <th>Aluno:</th>
          <th>Funcionário:</th>
          <th>Data Exame:</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @exame_fisicos.each do |exame_fisico| %>
        <tbody class="text-center">
          <tr>
            <td><%= exame_fisico.aluno.pessoa.nome %></td>
            <td><%= exame_fisico.funcionario.pessoa.nome %></td>
            <td><%= exame_fisico.dataExame %></td>
            </td>
            <td>
              <%= link_to 'Visualizar', exame_fisico,:class => "btn btn-primary text-white" %>
              <%= link_to 'Editar', edit_exame_fisico_path(exame_fisico), :class => "btn btn-info text-white" %>
              <%= link_to 'Excluir', exame_fisico, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
<br>

<%= link_to 'Cadastrar Exame Físico', new_exame_fisico_path, :class => "btn btn-success text-white" %>
