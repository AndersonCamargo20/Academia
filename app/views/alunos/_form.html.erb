<%= form_with(model: aluno, local: true) do |form| %>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><h2><%= pluralize(aluno.errors.count, "Erro") %> Impediram o Aluno de ser salvo:</h2></div>
  <% end %>

    <% if aluno.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% aluno.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



