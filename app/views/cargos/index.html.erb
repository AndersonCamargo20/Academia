<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>


   <h1>Lista de Cargos</h1>
    <div class="table-responsive">
      <table class="table ">
        <thead class="text-center text-white">
          <tr>
            <th>Descrição do Cargo</th>
            <th colspan="3"></th>
          </tr>
        </thead>        

        <tbody class="text-center">
          <% @cargos.each do |cargo| %>
                <tr>
                  <td><%= cargo.descricaoCargo %></td>
                  <td><%= link_to 'Visualizar', cargo, :class => "btn btn-primary text-white" %>
                  <%= link_to 'Editar', edit_cargo_path(cargo), :class => "btn btn-info text-white" %>
                  <%= link_to 'Excluir', cargo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white" %></td>
                </tr>
            <% end %>
          </tbody>
        </table>

<br>

<%= link_to 'Cadastrar Cargo', new_cargo_path, :class => "btn btn-success text-white" %>
